<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVMsample.MainPage"
             Visual="Material">

    <StackLayout>
        <Entry Placeholder="Name" HorizontalOptions="FillAndExpand" x:Name="txtName"></Entry>
        <Entry Placeholder="Phone" HorizontalOptions="FillAndExpand" x:Name="txtPhone"></Entry>
        <Entry Placeholder="Address" HorizontalOptions="FillAndExpand" x:Name="txtAddres"></Entry>
        <Button Text="Save data" Clicked="Button_Clicked" HorizontalOptions="FillAndExpand"></Button>
    </StackLayout>

    
</ContentPage>
